
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap.min.js"></script>

@{
    ViewBag.Title = "Reporte Operaciones";
}
@using Entidades
@{
    List<CalatogoCLS> listaTipomov = (List<CalatogoCLS>)ViewBag.listaTipomov;
    List<UsuariosCLS> listaUsuarios = (List<UsuariosCLS>)ViewBag.listaUsuarios;
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Reporte Operaciones</h1>
    </div>
    <div class="form-row">
        <div class="col-md-2">
            <div class="form-group">
                <label>Fecha Inicio : </label>
                <input type="date" id="fInicio" class="form-control" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Fecha Fin : </label>
                <input type="date" id="fFin" class="form-control" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Tipo Operación : </label>
                <select id="idTipoOperacion" class="form-control">
                    @foreach (var item in listaTipomov)
                    {
                        <option value="@item.ValorItem">@item.NombreItem</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Usuario : </label>
                <select id="Usuario" class="form-control">
                    @foreach (var item in listaUsuarios)
                    {
                        <option value="@item.Usser">@item.Usser</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Estado : </label>
                <div class="radio-container radio-edit">
                    <input type="radio" name="estado" id="todos" checked value="2" />
                    <label id="ejm" for="todos">Todos</label>
                    <input type="radio" name="estado" id="activos" value="0" />
                    <label id="ejm" for="activos">Activos</label>
                    <input type="radio" name="estado" id="inactivos" value="1" />
                    <label id="ejm" for="inactivos">Anulados</label>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <button type="button" id="btnBuscarOperaciones" class="btn btn-danger btn-lg px-3"><i class="fa fa-search" aria-hidden="true"></i> Buscar </button>
        </div>
        <div class="col-lg-2">
            <button type="button" id="btnExportarOperaciones" class="btn btn-success btn-lg px-3"><i class="fa fa-file-excel" aria-hidden="true"></i> Exportar a Excel</button>
        </div>
    </div>
    <br>
    <div class="form-horizontal row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="col-sm-12">
                    <div id="div_tbListaOperaciones" style="height: 100%;">
                        <table id="tbListaOperaciones" class="table table-bordered table-hover" style="width:1350px">
                            <thead>
                                <tr>
                                    <th>Operación</th>
                                    <th>Movimiento</th>
                                    <th>Salida</th>
                                    <th>Ingreso</th>
                                    <th>Tipo Cambio</th>
                                    <th>Caja (S/.)</th>
                                    <th>Caja ($)</th>
                                    <th>Caja (€)</th>
                                    <th>Usuario</th>
                                    <th>Hora</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody id="bodytbListaOperaciones"></tbody>
                        </table>
                    </div>
                    <div id="div_tbListaOperaciones_pagination" style="padding-top: 5px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Pages/Reportes/ReporteOperaciones.js"></script>
