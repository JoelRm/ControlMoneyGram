

@{
    ViewBag.Title = "Operación";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cuadre de Caja</h1>
    </div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Caja Soles(S/)</label>
                <input type="text" class="form-control" id="txtCajaActualSoles" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Dólares($)</label>
                <input type="text" class="form-control" id="txtCajaActualDolares" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Euros(€)</label>
                <input type="text" class="form-control" id="txtCajaActualEuros" disabled>
            </div>
            <div class="form-group col-md-3">
                <br>
                <button class="form-control btn btn-danger" id="btnGuardarCuadreCaja">Guardar Cuadre Caja</button>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Soles Manual(S/)</label>
                @*<input type="text" class="form-control" id="txtCajaSolesManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaSolesManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaSolesManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Dólares Manual($)</label>
                @*<input type="text" class="form-control" id="txtCajaDolaresManual" disabled>*@
                <div class="input-group">
                <input type="text" class="form-control" id="txtCajaDolaresManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaDolaresManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Euros Manual(€)</label>
                @*<input type="text" class="form-control" id="txtCajaEurosManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaEurosManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaEurosManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Conteo de billetes</div>
        <div class="panel-body">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <div class="form-group col-md-3">
                        <label>Moneda</label>
                        <select id="cboMoneda" class="form-control"></select>
                    </div>
                    <div class="form-group col-md-3">
                        <label>Monto de billete:</label>
                        <input type="text" class="form-control" id="txtMontoBillete">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Número de billetes:</label>
                        <input type="text" class="form-control" id="txtNumeroBilletes">
                    </div>
                    <div class="form-group col-md-1">
                        <br>
                        <button id="btnAgregar" type="button" class="form-control btn btn-success" title="Agregar">
                            <span class="fa fa-plus"> </span>
                        </button>
                    </div>
                </div>
                <div class="form-group col-md-6" id="divComentario">
                    <div class="form-group col-md-12">
                        <label>Comentario</label>
                        <textarea class="form-control" id="txtComentario" rows="2"></textarea>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Pages/Operaciones/CuadreCaja.js"></script>