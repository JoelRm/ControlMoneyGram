
@{
    ViewBag.Title = "Caja";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Configuración de Caja</h1>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Tipo Cambio Dólar</label>
                    <input type="text" class="form-control" id="txtTipoCambioDolar" maxlength="4">
                </div>
                <div class="form-group col-md-4">
                    <label>Tipo Cambio Euro</label>
                    <input type="text" class="form-control" id="txtTipoCambioEuro" maxlength="4">
                </div>
                <div class="form-group col-md-4">
                    <label>Caja Actual</label>
                    <input type="text" class="form-control" id="txtCajaActual">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-10"></div>
                <div class="form-group col-md-2">
                    <button class="btn btn-danger" id="btnGuardar">Guardar Configuración</button>
                </div>
            </div>
        </form>
    </div>
</div>