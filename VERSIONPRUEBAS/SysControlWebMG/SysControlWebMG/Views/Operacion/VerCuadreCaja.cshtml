                                                <td><input type="text" class="form-control _100" id="T_100" disabled></td>
                                                <td></td>
                                                <td><input type="text" class="form-control _500" id="TxtDeteriorados" disabled></td>
                                            </tr>
                                            <tr>
                                                <td><label>50 :</label></td>
                                                <td><input type="text" class="form-control _50" id="T_50" disabled></td>
                                                <td></td>
                                                <td><label>20 :</label></td>
                                                <td><input type="text" class="form-control _20" id="T_20" disabled></td>
                                                <td></td>
                                                <td><label>10 :</label></td>
                                                <td><input type="text" class="form-control _10" id="T_10" disabled></td>
                                            </tr>
                                            <tr>
                                                <td><label>5 :</label></td>
                                                <td><input type="text" class="form-control _5" id="T_5" disabled></td>
                                                <td></td>
                                                <td><label>2 :</label></td>
                                                <td><input type="text" class="form-control _2" id="T_2" disabled></td>
                                                <td></td>
                                                <td><label>1 :</label></td>
                                                <td><input type="text" class="form-control _1" id="T_1" disabled></td>
                                            </tr>
                                            <tr>
                                                <td><label>0.5 :</label></td>
                                                <td><input type="text" class="form-control _05" id="T_05" disabled></td>
                                                <td></td>
                                                <td><label>0.2 :</label></td>
                                                <td><input type="text" class="form-control _02" id="T_02" disabled></td>
                                                <td></td>
                                                <td><label>0.1 :</label></td>
                                                <td><input type="text" class="form-control _01" id="T_01" disabled></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6" id="divComentario">
                        <div class="form-group col-md-12">
                            <label>Comentario</label>
                            <textarea class="form-control" id="txtComentario" rows="2" disabled></textarea>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
