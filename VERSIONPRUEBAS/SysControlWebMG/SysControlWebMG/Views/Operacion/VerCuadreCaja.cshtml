@model List<Entidades.UsuariosCLS>

@{
    ViewBag.Title = "Operación";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cuadre de Caja por Fechas </h1>
    </div>
    <div class="form-row">
        <div class="col-md-2">
            <div class="form-group">
                <label>Fecha: </label>
                <input type="date" id="fecha" class="form-control" />
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label>Usuario</label>
                <select id="cboUsuario" class="form-control">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <option value=@Model[i].Usser> @Model[i].Usser </option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2" style="padding-top: 10px;">
            <button type="button" id="btnBuscarCuadreCaja" class="btn btn-danger btn-lg px-3"><i class="fa fa-search" aria-hidden="true"></i> Buscar </button>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Caja Soles(S/)</label>
                <input type="text" class="form-control" id="txtCajaActualSoles" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Dólares($)</label>
                <input type="text" class="form-control" id="txtCajaActualDolares" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Euros(€)</label>
                <input type="text" class="form-control" id="txtCajaActualEuros" disabled>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Caja Soles Manual(S/)</label>
                @*<input type="text" class="form-control" id="txtCaja SolesManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaSolesManual" disabled>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Dólares Manual($)</label>
                @*<input type="text" class="form-control" id="txtCaja DolaresManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaDolaresManual" disabled>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Euros Manual(€)</label>
                @*<input type="text" class="form-control" id="txtCaja EurosManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaEurosManual" disabled>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Diferencia Soles(S/)</label>
                <input type="text" class="form-control" id="txtTotalSoles" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Diferencia Dólares($)</label>
                <input type="text" class="form-control" id="txtTotalDolares" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Diferencia Euros(€)</label>
                <input type="text" class="form-control" id="txtTotalEuros" disabled>
            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">Conteo de billetes</div>
            <div class="panel-body">
                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="row">
                                <div class="form-group col-lg-3">
                                    <label>Moneda</label>
                                    <select id="cboMoneda" class="form-control"></select>
                                </div>
                            </div>
                            <div class="row">
                                <br>
                                <div class="col-sm-12" id="divTablaCuadreSoles">
                                    @*<div class="col-sm-2">
                                            <label>Deteriorados:</label>
                                            <input type="text" class="form-control _500" id="TxtDeteriorados">
                                        </div>*@
                                    <table id="tbl_CuadreCaja" class="table table-striped table-hover">
