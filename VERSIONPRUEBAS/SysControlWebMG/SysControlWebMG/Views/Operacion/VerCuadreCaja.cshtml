                                            <tr>
                                                <th width="4%">Monto Billete</th>
                                                <th width="20%">Suma</th>
                                                <th width="5%"> </th>
                                                <th width="4%">Monto Billete</th>
                                                <th width="20%">Suma</th>
                                                <th width="5%"> </th>
