                                                <th width="20%">Suma</th>
                                                <th width="5%"> </th>
                                                <th width="4%">Deteriorados</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><label>500 :</label></td>
                                                <td><input type="text" class="form-control _500" id="T_500" disabled></td>
                                                <td></td>
