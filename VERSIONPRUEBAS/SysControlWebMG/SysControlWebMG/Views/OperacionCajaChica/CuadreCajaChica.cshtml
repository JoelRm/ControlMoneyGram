

@{
    ViewBag.Title = "Operación";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cuadre de Caja Chica</h1>
    </div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Caja Chica Soles(S/)</label>
                <input type="text" class="form-control" id="txtCajaChicaActualSoles" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Chica Dólares($)</label>
                <input type="text" class="form-control" id="txtCajaChicaActualDolares" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Chica Euros(€)</label>
                <input type="text" class="form-control" id="txtCajaChicaActualEuros" disabled>
            </div>
            <div class="form-group col-md-3">
                <br>
                <button class="form-control btn btn-danger" id="btnGuardarCuadreCajaChica">Guardar Cuadre Caja Chica</button>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Chica Soles Manual(S/)</label>
                @*<input type="text" class="form-control" id="txtCajaChicaSolesManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaChicaSolesManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaChicaSolesManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Chica Dólares Manual($)</label>
                @*<input type="text" class="form-control" id="txtCajaChicaDolaresManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaChicaDolaresManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaChicaDolaresManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Caja Chica Euros Manual(€)</label>
                @*<input type="text" class="form-control" id="txtCajaChicaEurosManual" disabled>*@
                <div class="input-group">
                    <input type="text" class="form-control" id="txtCajaChicaEurosManual" disabled>
                    <span class="input-group-btn">
                        <button id="btnLimpiarCajaChicaEurosManual" class="btn btn-danger" type="button">
                            <span class="fa fa-trash" style="font-size:13pt;"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Diferencia Soles(S/)</label>
                <input type="text" class="form-control" id="txtTotalSoles" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Diferencia Dólares($)</label>
                <input type="text" class="form-control" id="txtTotalDolares" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>Diferencia Euros(€)</label>
                <input type="text" class="form-control" id="txtTotalEuros" disabled>
            </div>
        </div>
        

    <div class="panel panel-default">
        <div class="panel-heading">Conteo de billetes</div>
        <div class="panel-body">
            <div class="form-row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label>Moneda</label>
                                <select id="cboMoneda" class="form-control"></select>
                            </div>
                            <div class="form-group col-lg-4">
                                <br>
                                @*<button id="btnAddItem" type="button" class="btn btn-success" title="Añadir">
                                        <span class="fa fa-plus"> </span>
                                    </button>*@
                                <button id="btnCalcular" type="button" class="btn btn-primary" title="Calcular">
                                    <span class="fa fa-calculator"> </span>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <br>
                            <div class="col-sm-12" id="divTablaCuadre">
                                @*<div class="col-sm-2">
                                        <label>Deteriorados:</label>
                                        <input type="text" class="form-control _500" id="TxtDeteriorados">
                                    </div>*@
                                <table id="tbl_CuadreCaja" class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th width="4%">Monto Billete</th>
                                            <th width="20%">Suma</th>
                                            <th width="5%"> </th>
                                            <th width="4%">Monto Billete</th>
                                            <th width="20%">Suma</th>
                                            <th width="5%"> </th>
                                            <th width="4%">Monto Billete</th>
                                            <th width="20%">Suma</th>
                                            <th width="5%"> </th>
                                            <th width="4%">Deteriorados</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><label>500 :</label></td>
                                            <td><input type="text" class="form-control _500" id="T_500"></td>
                                            <td></td>
                                            <td><label>200 :</label></td>
                                            <td><input type="text" class="form-control _200" id="T_200"></td>
                                            <td></td>
                                            <td><label>100 :</label></td>
                                            <td><input type="text" class="form-control _100" id="T_100"></td>
                                            <td></td>
                                            <td><input type="text" class="form-control _500" id="TxtDeteriorados"></td>
                                        </tr>
                                        <tr>
                                            <td><label>50 :</label></td>
                                            <td><input type="text" class="form-control _50" id="T_50"></td>
                                            <td></td>
                                            <td><label>20 :</label></td>
                                            <td><input type="text" class="form-control _20" id="T_20"></td>
                                            <td></td>
                                            <td><label>10 :</label></td>
                                            <td><input type="text" class="form-control _10" id="T_10"></td>
                                        </tr>
                                        <tr>
                                            <td><label>5 :</label></td>
                                            <td><input type="text" class="form-control _5" id="T_5"></td>
                                            <td></td>
                                            <td><label>2 :</label></td>
                                            <td><input type="text" class="form-control _2" id="T_2"></td>
                                            <td></td>
                                            <td><label>1 :</label></td>
                                            <td><input type="text" class="form-control _1" id="T_1"></td>
                                        </tr>
                                        <tr>
                                            <td><label>0.5 :</label></td>
                                            <td><input type="text" class="form-control _05" id="T_05"></td>
                                            <td></td>
                                            <td><label>0.2 :</label></td>
                                            <td><input type="text" class="form-control _02" id="T_02"></td>
                                            <td></td>
                                            <td><label>0.1 :</label></td>
                                            <td><input type="text" class="form-control _01" id="T_01"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-6" id="divComentario">
                    <div class="form-group col-md-12">
                        <label>Comentario</label>
                        <textarea class="form-control" id="txtComentario" rows="2"></textarea>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Pages/OperacionesCajaChica/CuadreCajaChica.js"></script>