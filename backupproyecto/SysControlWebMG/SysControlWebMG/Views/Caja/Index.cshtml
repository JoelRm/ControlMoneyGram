
@{
    ViewBag.Title = "Caja";
}
<div class="panel panel-default">
    <div class="panel-heading">Configuración Caja</div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Caja Actual Soles</label>
                <input type="text" class="form-control" id="txtCajaActualSoles">
            </div>
            <div class="form-group col-md-3">
                <label>Caja Actual Dólares</label>
                <input type="text" class="form-control" id="txtCajaActualDolares">
            </div>
            <div class="form-group col-md-3">
                <label>Caja Actual Euros</label>
                <input type="text" class="form-control" id="txtCajaActualEuros">
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">Configuración Tipo Cambio Dólares ($)</div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Tipo Cambio Compra $</label>
                <input type="text" class="form-control" id="txtTCCompraDolar">
            </div>
            <div class="form-group col-md-3">
                <label>Tipo Cambio Venta $</label>
                <input type="text" class="form-control" id="txtTCVentaDolar">
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">Configuración Tipo Cambio Euros (€)</div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Tipo Cambio Compra €</label>
                <input type="text" class="form-control" id="txtTCCompraEuro">
            </div>
            <div class="form-group col-md-3">
                <label>Tipo Cambio Venta €</label>
                <input type="text" class="form-control" id="txtTCVentaEuro">
            </div>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-3"></div>
    <div class="form-group col-md-3">
        <button class="btn btn-danger" id="btnGuardarConf">Guardar</button>
    </div>
    <div class="form-group col-md-3">
        <button class="btn btn-danger" id="btnActualizarConf">Actualizar</button>
    </div>
</div>
<script src="~/Scripts/Pages/Configuración/Caja.js"></script>
