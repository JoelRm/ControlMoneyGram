
@{
    ViewBag.Title = "Operaciones";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Lista de Operaciones</h1>
    </div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-10"></div>
            <div class="form-group col-md-2">
                <button class="btn btn-danger" id="btnRefrescar">Refrescar</button>
            </div>
        </div>
        <table id="tblListaOperacion" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tipo Operación</th>
                    <th>Monto Operación</th>
                    <th>Moneda</th>
                    <th>Comentario</th>
                    <th>Fecha Creación</th>
                    <th>Usuario</th>
                    <th>Estado</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody id="bodytblListaOperacion">
                <tr>
                    <td colspan="9">No existen registros</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
